<div class="main-column">

  <div class="page-header">
    <h2 class="page-title">Search</h2>
  </div>

  <form class="search-form" name="search" action="/search">
    <input type="text" id="q" name="q" class="search-form-input" />
    <input type="submit" class="search-form-submit btn btn-attached" class="submit" value="Search" />
  </form>

  {% if search.performed %}
    {% paginate search.results by 10 %}
      <div class="results">
        {% for item in search.results %}
        <div class="item clearfix">
          <div class="thumbnail">
          {% if item.featured_image %}
            <a href="{{ item.url }}">{{ item.featured_image | product_img_url: 'thumb' | img_tag }}</a>
          {% endif %}
          </div>

          <div class="search-excerpt">
            <h3>{{ item.title | link_to: item.url }}</h3>
            {{ item.content | strip_html | truncatewords: 40 | highlight: search.terms }}
          </div>

        </div> <!-- end .item -->
        {% else %}
          <p class="empty">Your search for "{{ search.terms | escape }}" did not return any results.</p>
        {% endfor %}
      </div> <!-- end .results -->

    {% include 'pagination' %}
    {% endpaginate %}
  {% endif %}

</div>
