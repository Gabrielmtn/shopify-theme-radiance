<div id="col-left" class="{{ collection.handle }}">

  <section class="diagonal-divider {{ collection.handle }}">
    <div class="section-details">
      <h2 class="title">{{ collection.title }}</h2>
      {% if collection.description.size > 0 %}
      <div class="description content">{{ collection.description }}</div>
      {% endif %}
    </div>

    {% paginate collection.products by 16 %}
      {% if collection.products.size > 0 %}
    
        <ul class="product-grid clearfix">
        {% for product in collection.products %}
          <li{% cycle '', '', '', ' class="last-in-row"' %}>
            {% include 'product-grid-item' %}
          </li>
        {% endfor %}
        </ul>

        {% if paginate.pages > 1 %}
          {% include 'pagination' %}
        {% endif %}
      
      {% else %}    
        <strong>No products found in this collection.</strong>
      {% endif %}
    {% endpaginate %}
  </section>
  
</div> <!-- end #collection -->



